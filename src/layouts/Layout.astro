---
import "@fontsource/ubuntu";
interface Props {
  title: string;
}

const { title } = Astro.props;

import Navbar from "../components/Custom/Navbar";
import Footer from "../components/Custom/Footer.astro";
import WhatsappButton from "../components/Custom/WhatsappButton.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400..900&family=Ubuntu+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Navbar client:visible />
    <WhatsappButton />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  html {
    font-family: "Ubuntu", sans-serif;
    scroll-behavior: smooth;
    background: #2b2b2b;
    margin: 0;
    padding: 0;
  }
</style>
